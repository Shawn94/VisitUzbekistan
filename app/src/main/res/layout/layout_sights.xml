<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:weightSum="100"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal">
    <android.support.v7.widget.CardView
        android:id="@+id/sights_cardView"
        android:layout_width="370dp"
        android:layout_height="400dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:id="@+id/sights_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="100">
            <ImageView
                android:id="@+id/sights_bg"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="86"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />
            <TextView
                android:id="@+id/sights_title"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:text="Sights Title"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/top_choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:text="Top choice "
                    android:textStyle="italic"
                    android:textColor="#ff0000"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle" />
                <TextView
                    android:id="@+id/sights_card_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="museum in Tashkent"
                    android:textStyle="italic"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>